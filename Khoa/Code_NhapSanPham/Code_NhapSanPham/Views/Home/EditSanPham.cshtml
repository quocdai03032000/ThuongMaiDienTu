@model Code_NhapSanPham.Models.SanPham

<body>
    <div class="Header_Dau_Sach">
        <div class="row align-items-center ">
            <div class="col-md-4 ">

            </div>
            <div class="col-md-4">
                <h3 class="Them-Dau-sach-header-content">Edit Sản Phẩm</h3>
            </div>
            <div class="col-md-4">
                <a class="DauSach-btn-add" href="@Url.Action("Index","Home")"> <i class="fas fa-chevron-left"></i> Quay lại</a>
            </div>
        </div>
    </div>
    @* @using (Html.BeginForm("ThemDauSanPham", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))*@
    @using (Html.BeginForm("EditSanPham", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        @Html.AntiForgeryToken();
        @Html.HiddenFor(model => model.img)

        <div class="login_register">
            <div class="changePass">
                <div class="mess-suss-ThemDauSach">@ViewBag.ThemDauSanPham</div> <!-- bỏ viewbag vào dây -->
                <b>mã Sản phẩm</b>
                <div class="ThemDauSach-field">
                    <i class="fas fa-user-edit"></i>
                    @Html.EditorFor(model => model.SanPham_id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SanPham_id, "", new { @class = "text-danger" })
                </div>
                <b>Tên Sản phẩm</b>
                <div class="ThemDauSach-field">
                    <i class="fas fa-user-edit"></i>
                    @Html.EditorFor(model => model.SanPham_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SanPham_name, "", new { @class = "text-danger" })
                </div>
                <b>description</b>
                <div class="ThemDauSach-field">

                    @Html.EditorFor(model => model.SanPham_description, new { htmlAttributes = new { @name = "cars" } })
                    @Html.ValidationMessageFor(model => model.SanPham_description, "", new { @name = "cars" })
                </div>
                <b>Giá Tiền</b>
                <div class="ThemDauSach-field">
                    <i class="fas fa-money"></i>
                    @Html.EditorFor(model => model.SanPham_price, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SanPham_price, "", new { @class = "text-danger" })
                </div>
                <b>pirceSale</b>
                <div class="ThemDauSach-field">
                    <i class="fas fa-sticky-note"></i>
                    @Html.EditorFor(model => model.SanPham_pirceSale, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SanPham_pirceSale, "", new { @class = "text-danger" })
                </div>

                <b>Type_SanPham_id</b>
                <div class="ThemDauSach-field">
                    <i class="fas fa-money"></i>
                    @Html.EditorFor(model => model.Type_SanPham_id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Type_SanPham_id, "", new { @class = "text-danger" })
                </div>
                <b>Sale Key</b>
                <div class="ThemDauSach-field">
                    <i class="fas fa-money"></i>
                    @Html.EditorFor(model => model.Sale_key, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Sale_key, "", new { @class = "text-danger" })
                </div>
                <b>Hình ảnh</b>
                <div class=" ThemDauSach-field ThemDauSach-img">
                    <input type="file" value="img" name="imageUploader" onchange="ShowImg(this, document.getElementById('previewImg'))" />
                    <img src="" id="previewImg" alt="Hinh anh sản phảm">
                </div>

                <button type="submit" class="changePass-submit">Thêm sản phẩm</button>

            </div>
        </div>}

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
