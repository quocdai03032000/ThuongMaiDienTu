@*@model ThuongMaiDienTu_v2.Models.SanPham*@
@model IEnumerable<ThuongMaiDienTu_v2.Models.SanPham>
@{
    ViewBag.Title = "ProductManagememt";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Quản lý sản phẩm</h1>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title ">Danh sách sản phẩm</strong>
                        <a href="#" class="addItem"> <i class="fas fa-plus"></i> Thêm sản phẩm</a>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th>Mô tả</th>
                                    <th>Giá</th>
                                    <th>Type ID</th>
                                    @*   <th>Giá sale</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SanPham_Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SanPham_description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SanPham_Price)
                                        </td>
                                        @*    <td>
                                                @Html.DisplayFor(modelItem => item.SanPham_priceSale)
                                            </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Type_SanPham_id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sale_key)
                                        </td>
                                        <td>
                                            @*      @Html.DisplayFor(modelItem => item.img)*@
                                            <img src="@Url.Content(item.Main_img)" alt="ismg_sanPham" style="width:35px;height:35px" />
                                        </td>
                                        <td class="table_DauSach_btn">
                                            <a href="@Url.Action("EditProduct","Main",new {id=item.SanPham_Id })"><i class="fas fa-wrench"> </i></a>
                                            <a onclick="return confirm('Bạn chắc chắc muốn xóa sản phẩm   @Html.DisplayFor(a=>item.SanPham_Name) với mã @Html.DisplayFor(a=>item.SanPham_Id)')" href="@Url.Action("DelProduct","Main",new { id=item.SanPham_Id})"><i class="fas fa-trash-alt">  </i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
