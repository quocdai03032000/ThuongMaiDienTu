<div class="addItemModal hide">
    <div class="col-lg-6 card addItemModal_inner">
        <div class="card-header">
            <strong>Thêm sản phẩm</strong>
            <a href="#" class="close_modal"><i class="fas fa-times"></i></a>
        </div>
        <div class="card-body card-block">
            <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Size</label></div>
                    <div class="col-12 col-md-9"><input type="text" id="text-input" name="text-input" placeholder="Nhập size" class="form-control"></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Số lượng</label></div>
                    <div class="col-12 col-md-9"><input type="text" id="text-input" name="text-input" placeholder="Nhập số lượng" class="form-control"></div>
                </div>
                <br>
                <button class="btnAddItem">THÊM</button>
            </form>
        </div>
    </div>
</div>

