
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Sản phẩm chi tiết</h1>
            </div>
        </div>
    </div>
</div>
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-9 card ">
                <div class="card-header">
                    <strong>Sản phẩm</strong>
                </div>
                <div class="card-body card-block">
                    <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                        <div class="row form-group">
                            <div class="col col-md-3"><label for="text-input" class=" form-control-label">Tên sản phẩm</label></div>
                            <div class="col-12 col-md-9"><input type="text" id="text-input" name="text-input" placeholder="Text" class="form-control"><small class="form-text text-muted">This is a help text</small></div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3"><label for="textarea-input" class=" form-control-label">Mô tả</label></div>
                            <div class="col-12 col-md-9"><textarea name="textarea-input" id="textarea-input" rows="9" placeholder="Content..." class="form-control"></textarea></div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3"><label for="select" class=" form-control-label">Loại sản phẩm</label></div>
                            <div class="col-12 col-md-9">
                                <select name="select" id="select" class="form-control">
                                    <option value="0">Chọn loại sản phẩm</option>
                                    <option value="1">Tee</option>
                                    <option value="2">Pant</option>
                                    <option value="3">Jackket</option>
                                    <option value="3">Accessories</option>
                                </select>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3"><label for="text-input" class=" form-control-label">Giá sản phẩm</label></div>
                            <div class="col-12 col-md-9"><input type="number" id="text-input" name="text-input" placeholder="VND" class="form-control"></div>
                        </div>

                        <div class="row form-group">
                            <div class="col col-md-3"><label for="file-input" class=" form-control-label">Ảnh chính</label></div>
                            <div class="col-12 col-md-6"><input type="file" id="file-input" name="file-input" class="form-control-file"></div>
                            <div class="col col-md-3"><img class="ImgItemDemo" src="~/Areas/Admin/images/noimage.jpg" alt="HinhSach"></div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3"><label for="file-input" class=" form-control-label">Ảnh 1</label></div>
                            <div class="col-12 col-md-6"><input type="file" id="file-input" name="file-input" class="form-control-file"></div>
                            <div class="col col-md-3"><img class="ImgItemDemo" src="~/Areas/Admin/images/noimage.jpg" alt="HinhSach"></div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3"><label for="file-input" class=" form-control-label">Ảnh 2</label></div>
                            <div class="col-12 col-md-6"><input type="file" id="file-input" name="file-input" class="form-control-file"></div>
                            <div class="col col-md-3"><img class="ImgItemDemo" src="~/Areas/Admin/images/noimage.jpg" alt="HinhSach"></div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3"><label for="file-input" class=" form-control-label">Ảnh 3</label></div>
                            <div class="col-12 col-md-6"><input type="file" id="file-input" name="file-input" class="form-control-file"></div>
                            <div class="col col-md-3"><img class="ImgItemDemo" src="~/Areas/Admin/images/noimage.jpg" alt="HinhSach"></div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3"><label for="file-input" class=" form-control-label">Ảnh 3</label></div>
                            <div class="col-12 col-md-6">
                                <input type="file" id="file-input" name="file-input" class="form-control-file">
                            </div>
                            <div class="col col-md-3"><img class="ImgItemDemo" src="~/Areas/Admin/images/noimage.jpg" alt="HinhSach"></div>
                        </div>
                        <br>
                        <button class="btnFixItem">CHỈNH SỮA</button>
                        <button class="btnDelItem">XOÁ</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title ">Bảng size</strong>
                        <a href="#" class="addItem"> <i class="fas fa-plus"></i> Thêm size</a>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Size</th>
                                    <th>Số lượng</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>S</td>
                                    <td>10</td>
                                </tr>
                                <tr>
                                    <td>M</td>
                                    <td>0</td>
                                </tr>
                                <!-- ---------------------- -->
                                <tr>
                                    <td style="font-weight: 700;">Tổng cộng</td>
                                    <td style="font-weight: 700;">10</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- modal add addItem -->
<!-- modal add addItem -->
